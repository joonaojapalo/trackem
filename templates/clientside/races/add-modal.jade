extends extendable/modal

block title
	| {{'{{_ "Create a new event"}}'}}

block body
	.row
		.col-xs-12
			input.form-control(name="race-name",placeholder="Race name")
	br
	.row
		.col-sm-6
			div(data-region="maps-dropdown")

		.col-sm-6
			.thumbnail.thumbnail-caption
				img(src="/static/images/map-example.jpg")
				.caption: h5 Preview map name


block footer
	button.btn.btn-default(data-dismiss="modal") {{'{{_ "Cancel"}}'}}
	button.btn.btn-primary(data-action="create", data-dismiss="modal")
		span.fa.fa-check
		| {{'{{_ "Create"}}'}}
